{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ncmfse/dropdown-menu",
	"version": "0.1.0",
	"title": "Ncmaz Dropdown Menu",
	"category": "ncmfse",
	"description": " A block that creates a dropdown menu.",
	"allowedBlocks": [
		"ncmfse/dropdown-menu-trigger",
		"ncmfse/dropdown-menu-content"
	],

	"example": {},
	"attributes": {
		"dropdownMenuId": {
			"type": "number",
			"default": 0
		},
		"menuType": {
			"type": "string",
			"default": "dropdown"
		}
	},
	"providesContext": {
		"dropdownMenuId": "dropdownMenuId",
		"menuType": "menuType"
	},
	"supports": {
		"color": {
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"reusable": false,
		"shadow": true,
		"spacing": {
			"padding": ["horizontal", "vertical"],
			"__experimentalDefaultControls": {
				"padding": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		},
		"interactivity": true
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScriptModule": "file:./view.js"
}
